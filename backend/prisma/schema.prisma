// KEYWORDS:
// - IDIOMATIC PRISMA (CamelCase Client, SnakeCase DB)
// - SNAPSHOT FIELDS INCLUDED
// - KEYCLOAK COMPATIBLE

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ==============================
// ENUMERATIONS
// ==============================

enum UserStatus {
  ACTIVE
  SUSPENDED
  BANNED
}

enum OrderStatus {
  PENDING     // Chờ xử lý
  CONFIRMED   // Đã xác nhận
  SHIPPING    // Đang giao
  DELIVERED   // Đã giao thành công
  COMPLETED   // Hoàn tất (hết hạn đổi trả)
  CANCELLED   // Hủy
  REFUNDED    // Hoàn tiền
  FAILED      // Thất bại
}

enum PaymentStatus {
  UNPAID
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum Gender {
  MALE
  FEMALE
  UNISEX
  KID
}

// ==============================
// MODELS - IAM (Identity)
// ==============================

model User {
  id              String     @id @db.VarChar(36) // Keycloak sub (UUID)
  email           String     @unique @db.VarChar(255)
  firstName       String?    @map("first_name") @db.VarChar(100)
  lastName        String?    @map("last_name") @db.VarChar(100)
  avatar          String?    @db.VarChar(500)
  phone           String?    @unique @db.VarChar(20)
  isEmailVerified Boolean    @default(false) @map("is_email_verified")
  status          UserStatus @default(ACTIVE)
  
  createdAt       DateTime   @default(now()) @map("created_at")
  updatedAt       DateTime   @updatedAt @map("updated_at")

  // Relations
  addresses       UserAddress[]
  orders          Order[]
  reviews         ProductReview[]
  roles           UserRole[]

  @@map("user")
}

model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique @db.VarChar(50) // ADMIN, CUSTOMER, STAFF
  description String?  @db.VarChar(255)
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  users       UserRole[]

  @@map("role")
}

// Many-to-Many explicit table
model UserRole {
  userId String @map("user_id") @db.VarChar(36)
  roleId Int    @map("role_id")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
  @@map("user_role")
}

model UserAddress {
  id            Int      @id @default(autoincrement())
  contactName   String   @map("contact_name") @db.VarChar(100)
  phone         String   @db.VarChar(20)
  addressDetail String   @map("address_detail") @db.VarChar(255)
  priority      Boolean  @default(false) // Default address
  
  userId        String   @map("user_id") @db.VarChar(36)
  communeId     Int      @map("commune_id")

  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  commune Commune @relation(fields: [communeId], references: [id])

  @@map("user_address")
}

// ==============================
// MODELS - LOCATION
// ==============================

model Province {
  id        Int        @id @default(autoincrement())
  code      String     @unique @db.VarChar(20)
  name      String     @db.VarChar(100)
  
  districts District[]

  @@map("province")
}

model District {
  id         Int       @id @default(autoincrement())
  code       String    @unique @db.VarChar(20)
  name       String    @db.VarChar(100)
  provinceId Int       @map("province_id")
  
  province   Province  @relation(fields: [provinceId], references: [id])
  communes   Commune[]

  @@map("district")
}

model Commune {
  id                  Int     @id @default(autoincrement())
  code                String  @unique @db.VarChar(20)
  name                String  @db.VarChar(100)
  shippingFeeModifier Decimal @default(0) @map("shipping_fee_modifier") @db.Decimal(10, 2)
  districtId          Int     @map("district_id")
  
  district      District      @relation(fields: [districtId], references: [id])
  userAddresses UserAddress[]
  orders        Order[]       // Chỉ để tham chiếu tính phí ship, địa chỉ text vẫn lưu snapshot trong Order

  @@map("commune")
}

// ==============================
// MODELS - PIM (Product)
// ==============================

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(100)
  slug      String   @unique @db.VarChar(120)
  parentId  Int?     @map("parent_id")
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  parent   Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children Category[] @relation("CategoryHierarchy")
  products Product[]

  @@map("category")
}

model Size {
  id        Int              @id @default(autoincrement())
  name      String           @db.VarChar(50) // Size S, M, L
  value     String           @db.VarChar(50) // Hiển thị
  
  variants  ProductVariant[]

  @@map("size")
}

model Color {
  id        Int              @id @default(autoincrement())
  name      String           @db.VarChar(50) // Red, Blue
  hex       String           @db.VarChar(7)  // #FF0000
  
  variants  ProductVariant[]

  @@map("color")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(255)
  slug        String   @unique @db.VarChar(255)
  summary     String?  @db.Text
  description String?  @db.Text
  gender      Gender   @default(UNISEX)
  categoryId  Int      @map("category_id")
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  category Category         @relation(fields: [categoryId], references: [id])
  variants ProductVariant[]
  reviews  ProductReview[]

  @@map("product")
}

model ProductVariant {
  id               Int      @id @default(autoincrement())
  sku              String?  @unique @db.VarChar(50) // Stock Keeping Unit
  physicalQuantity Int      @default(0) @map("physical_quantity")
  reservedQuantity Int      @default(0) @map("reserved_quantity")
  unitPrice        Decimal  @map("unit_price") @db.Decimal(10, 2)
  discountPercent  Decimal  @default(0) @map("discount_percent") @db.Decimal(5, 2)
  isDefault        Boolean  @default(false) @map("is_default")
  
  productId        Int      @map("product_id")
  sizeId           Int      @map("size_id")
  colorId          Int      @map("color_id")
  
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  product    Product        @relation(fields: [productId], references: [id], onDelete: Cascade)
  size       Size           @relation(fields: [sizeId], references: [id])
  color      Color          @relation(fields: [colorId], references: [id])
  images     ProductImage[]
  orderItems OrderItem[]

  @@map("product_variant")
}

model ProductImage {
  id               Int      @id @default(autoincrement())
  imageUrl         String   @map("image_url") @db.VarChar(500)
  altText          String?  @map("alt_text") @db.VarChar(255)
  displayOrder     Int      @default(0) @map("display_order")
  
  productVariantId Int      @map("product_variant_id")

  productVariant ProductVariant @relation(fields: [productVariantId], references: [id], onDelete: Cascade)

  @@map("product_image")
}

// ==============================
// MODELS - OMS (Order)
// ==============================

model PaymentMethod {
  id          Int      @id @default(autoincrement())
  code        String   @unique @db.VarChar(50) // COD, VNPAY, MOMO
  name        String   @db.VarChar(100)
  isActive    Boolean  @default(true) @map("is_active")
  
  orders      Order[]

  @@map("payment_method")
}

model Order {
  id              Int           @id @default(autoincrement())
  code            String        @unique @db.VarChar(50)
  
  // --- SNAPSHOT DATA (Bắt buộc lưu cứng tại thời điểm đặt) ---
  receiverName    String        @map("receiver_name") @db.VarChar(100)
  receiverPhone   String        @map("receiver_phone") @db.VarChar(20)
  addressDetail   String        @map("address_detail") @db.VarChar(255)
  // -----------------------------------------------------------

  subTotal        Decimal       @map("sub_total") @db.Decimal(10, 2)
  shippingFee     Decimal       @map("shipping_fee") @db.Decimal(10, 2)
  discountAmount  Decimal       @map("discount_amount") @db.Decimal(10, 2)
  tax             Decimal       @default(0) @db.Decimal(10, 2)
  total           Decimal       @db.Decimal(10, 2)

  orderStatus     OrderStatus   @default(PENDING) @map("order_status")
  paymentStatus   PaymentStatus @default(UNPAID) @map("payment_status")
  
  userId          String        @map("user_id") @db.VarChar(36)
  communeId       Int           @map("commune_id") // Reference location calculation
  paymentMethodId Int           @map("payment_method_id")

  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")

  user          User          @relation(fields: [userId], references: [id])
  commune       Commune       @relation(fields: [communeId], references: [id])
  paymentMethod PaymentMethod @relation(fields: [paymentMethodId], references: [id])
  orderItems    OrderItem[]
  
  @@map("order")
}

model OrderItem {
  id               Int     @id @default(autoincrement())
  quantity         Int
  
  // --- SNAPSHOT PRICE (Giá tại thời điểm mua) ---
  unitPrice        Decimal @map("unit_price") @db.Decimal(10, 2)
  discountPercent  Decimal @map("discount_percent") @db.Decimal(5, 2)
  // ----------------------------------------------

  orderId          Int     @map("order_id")
  productVariantId Int     @map("product_variant_id")

  order          Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productVariant ProductVariant @relation(fields: [productVariantId], references: [id])
  review         ProductReview?

  @@map("order_item")
}

// ==============================
// MODELS - SOCIAL
// ==============================

model ProductReview {
  id          Int      @id @default(autoincrement())
  rating      Int      @db.SmallInt // 1-5
  comment     String?  @db.Text
  
  userId      String   @map("user_id") @db.VarChar(36)
  productId   Int      @map("product_id")
  orderItemId Int      @unique @map("order_item_id") // Verified Purchase constraint
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user      User      @relation(fields: [userId], references: [id])
  product   Product   @relation(fields: [productId], references: [id])
  orderItem OrderItem @relation(fields: [orderItemId], references: [id])

  @@map("product_review")
}